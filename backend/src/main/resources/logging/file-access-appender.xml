<?xml version="1.0" encoding="UTF-8"?>
<included>
    <appender name="FILE-ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/access/http-access.log</file>
        <encoder>
            <charset>utf8</charset>
            <Pattern>
                %n###### HTTP Request ###### %n%fullRequest%n###### HTTP Response ###### %n%fullResponse
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${BACKUP_LOCATION}/access/access-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>
</included>
